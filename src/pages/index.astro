---
// component script
import Cards from "../components/Cards.astro";
import Main from "../layouts/Main.astro";
const profilePicture = "https://i.imgur.com/JPGFE75.jpg";
---

<Main title="Frau Katerina">
  <div class="profile">
    <img
      src={profilePicture}
      alt="Profile picture"
      width="100px"
      height="100px"
      class="profile__picture"
    />
    <div class="profile__details">
      <h1>Faur Katerine</h1>
      <h2>VP of Engineering at Gooooooooogle</h2>
      <p>
        Helping developers be excellent and succeed at building scalable
        products
      </p>
    </div>
  </div>
  <Cards
    cards={[
      {
        title: "Here are my guiding philosohpies for life",
        gradientFrom: "#818cf8",
        gradientTo: "#d8b4fe",
        to: "/philosophies",
      },
      {
        title: "A summary of my work history",
        gradientFrom: "#fde68a",
        gradientTo: "#fca5a5",
        to: "/work-summary",
      },
      {
        title: "What I do beyond technology",
        gradientFrom: "#6ee7b7",
        gradientTo: "#9333ea",
        to: "/beyond-tech",
      },
    ]}
  />
</Main>

<style>
  /* CSS as usual */
  .profile {
    display: flex;
    align-items: flex-start;
    flex-wrap: wrap;
    padding: 1rem 0 3rem 0;
  }
  .profile__details {
    flex: 1 0 300px;
  }
  .profile__details > h1 {
    margin-top: 0;
  }
  .profile__picture {
    border-radius: 50%;
    margin: 0 2rem 1rem 0;
  }
</style>
